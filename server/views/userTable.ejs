<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title>寵樂-後臺系統</title>
  <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
  <!-- <link
      rel="icon"
      href="img/kaiadmin/favicon.ico"
      type="image/x-icon"
    /> -->

  <!-- Fonts and icons -->
  <script src="/media/js/plugin/webfont/webfont.min.js"></script>
  <script>
    WebFont.load({
      google: { families: ["Public Sans:300,400,500,600,700"] },
      custom: {
        families: [
          "Font Awesome 5 Solid",
          "Font Awesome 5 Regular",
          "Font Awesome 5 Brands",
          "simple-line-icons",
        ],
        urls: ["css/fonts.min.css"],
      },
      active: function () {
        sessionStorage.fonts = true;
      },
    });
  </script>

  <!-- CSS Files -->
  <link rel="stylesheet" href="/media/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/media/css/plugins.min.css" />
  <link rel="stylesheet" href="/media/css/kaiadmin.min.css" />

</head>

<body>
  <%- include('navbar.ejs') %>
    <div class="container">
      <div class="page-inner">
        <div class="page-header">
        </div>

        <!-- ------------------------------------------ -->

        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="d-flex align-items-center">
                <h4 class="card-title">客戶資料</h4>
                <button class="btn btn-primary btn-round ms-auto" data-bs-toggle="modal" data-bs-target="#addRowModal">
                  <i class="fa fa-plus"></i>
                  新增資料
                </button>
              </div>
            </div>
            <div class="card-body">
              <!-- 新增資料 -->
              <div class="modal fade" id="addRowModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header border-0">
                      <h5 class="modal-title">
                        <span class="fw-mediumbold">新增客戶資料</span>
                      </h5>
                      <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p class="small">
                        請依序填寫欄位，並確保每個欄位都有填入資料
                      </p>
                      <form id="userForm">
                        <div class="row">
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶名稱</label>
                              <input id="addName" type="text" class="form-control" name="userName" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶電話
                              </label>
                              <input id="addPhone" type="text" class="form-control" name="userPhone" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>電子郵件</label>
                              <input id="addMail" type="text" class="form-control" name="userMail" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶密碼</label>
                              <input id="addPassword" type="text" class="form-control" name="userPassword" />
                            </div>
                          </div>
                        </div>
                    </div>

                    <div class="modal-footer border-0">
                      <button type="submit" id="addRowButton" class="btn btn-primary">
                        確認新增
                      </button>
                      <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                        取消
                      </button>
                    </div>

                    </form>
                  </div>
                </div>
              </div>
              <!-- 更改資料 -->
              <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header border-0">
                      <h5 class="modal-title">
                        <span class="fw-mediumbold">變更客戶資料</span>
                      </h5>
                      <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p class="small">
                        請依序填寫欄位，並確保每個欄位都有填入資料
                      </p>
                      <form id="editUserForm">
                        <div class="row">
                          <div class="col-sm-12">
                            <input type="hidden" name="edituserId">
                            <div class="form-group form-group-default">
                              <label>客戶名稱</label>
                              <input type="text" class="form-control" name="edituserName" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶電話
                              </label>
                              <input type="text" class="form-control" name="edituserPhone" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>電子郵件</label>
                              <input type="text" class="form-control" name="edituserMail" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶密碼</label>
                              <input type="text" class="form-control" name="edituserPassword" />
                            </div>
                          </div>
                        </div>
                    </div>

                    <div class="modal-footer border-0">
                      <button type="submit" id="editSubmit" class="btn btn-primary">
                        確認更改
                      </button>
                      <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                        取消
                      </button>
                    </div>

                    </form>
                  </div>
                </div>
              </div>
              <!-- 刪除資料 -->
              <div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header border-0">
                      <h5 class="modal-title">
                        <span class="fw-mediumbold">新增客戶資料</span>
                      </h5>
                      <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p class="small">
                        請確保確保每個欄位都有填入資料
                      </p>
                      <form id="userForm">
                        <div class="row">
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶名稱</label>
                              <input id="addName" type="text" class="form-control" name="userName" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶電話
                              </label>
                              <input id="addPhone" type="text" class="form-control" name="userPhone" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>電子郵件</label>
                              <input id="addMail" type="text" class="form-control" name="userMail" />
                            </div>
                          </div>
                          <div class="col-sm-12">
                            <div class="form-group form-group-default">
                              <label>客戶密碼</label>
                              <input id="addPassword" type="text" class="form-control" name="userPassword" />
                            </div>
                          </div>
                        </div>
                    </div>

                    <div class="modal-footer border-0">
                      <button type="Submit" id="editSubmit" class="btn btn-primary">
                        確認新增
                      </button>
                      <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                        取消
                      </button>
                    </div>

                    </form>
                  </div>
                </div>
              </div>
            </div>

            <div class="table-responsive">
              <table id="add-row" class="display table table-striped table-hover">
                <thead>
                  <tr>
                    <th>客戶ID</th>
                    <th>客戶姓名</th>
                    <th>客戶電話 </th>
                    <th>電子郵件</th>
                    <th>客戶密碼</th>
                    <th style="width: 10%">編輯/刪除</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach((userData,index)=> { %>
                    <tr>
                      <td>
                        <%= userData.user_id %>
                      </td>
                      <td>
                        <%= userData.user_name %>
                      </td>
                      <td>
                        <%= userData.user_phone %>
                      </td>
                      <td>
                        <%= userData.user_mail %>
                      </td>
                      <td>
                        <%= userData.user_password %>
                      </td>
                      <td>
                        <!-- 編輯按鈕 -->
                        <div class="form-button-action">
                          <button type="button" title="" class="btn btn-link btn-primary btn-lg" id="edit"
                            data-bs-toggle="modal" data-bs-target="#editModal" onclick="Edit(<%= userData.user_id %>)">
                            <i class="fa fa-edit"></i>
                          </button>
                          <!-- 刪除按鈕 -->
                          <button type="button" title="" class="btn btn-link btn-danger" id="remove"
                            data-bs-toggle="modal" data-bs-target="#DeleteModal"
                            onclick="Delete(<%= userData.user_id %>)">
                            <i class="fa fa-times"></i>
                          </button>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
    </div>
    </div>
    <%- include('footer.ejs') %>

      <script>

        //變更資料
        function Edit(id) {
          $.ajax({
            url: "/admin/getUserData/" + id,
            type: "GET",
            success: function (res) {
              var res = JSON.parse(res)
              // console.log(res);
              //將值傳遞進input
              $("input[name='edituserId']").val(res.user_id)
              $("input[name='edituserName']").val(res.user_name)
              $("input[name='edituserPhone']").val(res.user_phone)
              $("input[name='edituserMail']").val(res.user_mail)
              $("input[name='edituserPassword']").val(res.user_password)
            }, error: function () {
              alert('系統錯誤')
            }
          })
        }
        //刪除資料
        function Delete(id) {
          event.preventDefault();
          var editDataToJson = { 'id': id }
          editDataToJson = JSON.stringify(editDataToJson)
          // console.log(editDataToJson);
          $.ajax({
            url: '/admin/deleteUserData',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            data: editDataToJson,
            success: function (res) {
              var res = JSON.parse(res)
              if (res.errno === 1) {
                alert("新增成功")
                location.reload()
              } else if (res.errno === 0) {
                alert("新增失敗")
              }
            }, error: function () {
              alert("系統錯誤")

            }
          })
          $("#DeleteModal").modal("hide");
          location.reload()
        }

        $(document).ready(function () {

          $("#basic-datatables").DataTable({});
          $("#multi-filter-select").DataTable({
            pageLength: 5,
            initComplete: function () {
              this.api()
                .columns()
                .every(function () {
                  var column = this;
                  var select = $(
                    '<select class="form-select"><option value=""></option></select>'
                  )
                    .appendTo($(column.footer()).empty())
                    .on("change", function () {
                      var val = $.fn.dataTable.util.escapeRegex($(this).val());

                      column
                        .search(val ? "^" + val + "$" : "", true, false)
                        .draw();
                    });

                  column
                    .data()
                    .unique()
                    .sort()
                    .each(function (d, j) {
                      select.append(
                        '<option value="' + d + '">' + d + "</option>"
                      );
                    });
                });
            },
          });

          // Add Row
          //一排顯示幾項
          $("#add-row").DataTable({
            pageLength: 5,
          });

          //新增資料按鈕
          $("#addRowButton").click(function () {
            event.preventDefault();
            //提取輸入資料
            var data = $('#userForm').serializeArray();
            //轉換成陣列
            dataToJson = serializeToJSON(data);
            console.log(dataToJson);

            $.ajax({
              url: '/admin/addUserData',
              type: 'POST',
              contentType: "application/json; charset=utf-8",
              data: dataToJson,
              success: function (res) {
                var res = JSON.parse(res)
                if (res.errno === 1) {
                  alert("新增成功")
                } else if (res.errno === 0) {
                  alert("新增失敗")
                }
              }, error: function () {
                alert("系統錯誤")

              }
            })
            $("#addRowModal").modal("hide");
            location.reload()
          });


          //傳送變更資料
          $('#editSubmit').click(function () {
            event.preventDefault();
            //提取輸入資料
            var editData = $('#editUserForm').serializeArray();
            //轉換成陣列
            editDataToJson = serializeToJSON(editData);
            console.log(editDataToJson);
            $.ajax({
              url: '/admin/editUserData',
              type: 'POST',
              contentType: "application/json; charset=utf-8",
              data: editDataToJson,
              success: function (res) {
                var res = JSON.parse(res)
                if (res.errno === 1) {
                  alert("新增成功")
                  location.reload()
                } else if (res.errno === 0) {
                  alert("新增失敗")
                }
              }, error: function () {
                alert("系統錯誤")

              }
            })
            $("#editModal").modal("hide");
            location.reload()

          });

          //將資料轉成JOSON格式
          function serializeToJSON(data) {
            var value = {};
            for (index in data) {
              value[data[index].name] = data[index].value;
            } return JSON.stringify(value)
          }
        });

      </script>

</body>

</html>